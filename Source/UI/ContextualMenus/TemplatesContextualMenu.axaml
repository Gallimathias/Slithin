<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Slithin.Controls"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="150"
             x:Class="Slithin.UI.ContextualMenus.TemplatesContextualMenu">
  <DockPanel>
    <StackPanel Spacing="4" Orientation="Horizontal" HorizontalAlignment="Left" DockPanel.Dock="Left">
      <controls:ImageButton Text="Add" Command="{Binding OpenAddModalCommand}" Image="avares://Slithin/Resources/add.png" />
      <controls:ImageButton Text="Remove" Command="{Binding RemoveTemplateCommand}" Image="avares://Slithin/Resources/minus.png" CommandParameter="{Binding SelectedTemplate}" />

      <controls:ImagePopupButton Text="Filter" Image="avares://Slithin/Resources/filter.png">
        <controls:ImagePopupButton.PopupContent>
          <Grid RowDefinitions="*,AUTO" Margin="4">
            <TextBox Watermark="Search ..." MinWidth="175" Margin="0,0,0,10" IsVisible="False" />
            <ToggleSwitch OnContent="Landscape" OffContent="Portrait" IsChecked="{Binding SyncService.TemplateFilter.Landscape, Mode=TwoWay}" />
            <ComboBox Grid.Row="1" Items="{Binding SyncService.TemplateFilter.Categories, Mode=TwoWay}" SelectedItem="{Binding SyncService.TemplateFilter.SelectedCategory}" MinWidth="175" />
          </Grid>
        </controls:ImagePopupButton.PopupContent>
      </controls:ImagePopupButton>
    </StackPanel>
  </DockPanel>
</UserControl>