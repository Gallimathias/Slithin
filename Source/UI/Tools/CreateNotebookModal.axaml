<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="using:Slithin.Controls"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
             x:Class="Slithin.UI.Tools.CreateNotebookModal">
  <c:DialogControl Header="Generate PDF Notebook" CommandText="OK" IsCancelEnabled="True" Command="{Binding OKCommand}" MinHeight="350" MinWidth="500">
    <Grid RowDefinitions="40,40,45,35,36">
      <TextBox Watermark="Name" Grid.Row="0" Margin="5" HorizontalAlignment="Left" MinWidth="185" Text="{Binding Name}" />

      <StackPanel Orientation="Horizontal" Margin="2" Spacing="5" Grid.Row="1">
        <ComboBox SelectedIndex="0" Margin="3" Items="{Binding Templates}" PlaceholderText="Template" SelectedItem="{Binding SelectedTemplate}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text="Landscape" IsVisible="{Binding Landscape}" />
              </StackPanel>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBox Watermark="Page Count" Margin="3" Text="{Binding PageCount}" />

        <Button Content="Add" Command="{Binding AddPagesCommand}" />
      </StackPanel>

      <StackPanel HorizontalAlignment="Right" Grid.Row="0" Spacing="3">
        <ComboBox PlaceholderText="Default Cover">
          <ComboBoxItem>Blue</ComboBoxItem>
          <ComboBoxItem>Yellow</ComboBoxItem>
          <ComboBoxItem>Green</ComboBoxItem>
          <ComboBoxItem>Red</ComboBoxItem>
          <ComboBoxItem>Purple</ComboBoxItem>
        </ComboBox>

        <TextBlock Text="Cover" />

        <Border BorderBrush="Black" BorderThickness="1" Width="150" Height="150">
          <Image Source="{Binding Cover, Mode=TwoWay}" DragDrop.AllowDrop="True" Width="150" Height="150" Margin="5" />
        </Border>

        <CheckBox Content="Render Name" IsChecked="{Binding RenderName}" ToolTip.Tip="Only for Short Names" />
      </StackPanel>

      <ComboBox SelectedIndex="0" Margin="3" Grid.Row="2" Items="{Binding Categories}" PlaceholderText="Category" />
    </Grid>
  </c:DialogControl>
</UserControl>