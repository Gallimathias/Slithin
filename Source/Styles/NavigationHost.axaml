<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Slithin.Controls">
  <Design.PreviewWith>
    <controls:NavigationHost />
  </Design.PreviewWith>

  <Style Selector="controls|NavigationHost">
    <Setter Property="Template">
      <ControlTemplate>
        <Carousel Margin="3" Name="PART_Carousel" Items="{TemplateBinding Pages}" SelectedIndex="{TemplateBinding SelectedIndex, Mode=TwoWay}" />
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>